@model IEnumerable<PymeCafe.Models.Valoracionesdeproducto>

<h2 class="mb-4 text-success">Tus Valoraciones</h2>

@if (!Model.Any())
{
    <p class="text-muted">No has realizado valoraciones de productos.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var valoracion in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <img src="@(!string.IsNullOrEmpty(valoracion.Producto?.Foto) ? valoracion.Producto.Foto : "/images/placeholder.png")"
                         class="card-img-top imagen-producto-fija"
                         alt="Producto"
                         onerror="this.onerror=null;this.src='/images/placeholder.png';" />


                    <div class="card-body">
                        <h5 class="card-title">@valoracion.Producto?.NombreProducto</h5>
                        <p class="card-text"><strong>Calificación:</strong> @valoracion.Calificacion ⭐</p>
                        <p class="card-text text-muted">@valoracion.Comentario</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
<style>
    .imagen-producto-fija {
        width: 100%;
        height: 200px;
        object-fit: cover;
        object-position: center;
        border-radius: 4px;
    }
</style>
