@model IEnumerable<PymeCafe.Models.Recomendacion>

<h2 class="mb-4 text-primary">Tus Recomendaciones</h2>

@if (!Model.Any())
{
    <p class="text-muted">No tienes recomendaciones en este momento.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var rec in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    @if (!string.IsNullOrEmpty(rec.Producto?.Foto))
                    {
                        <img src="@rec.Producto.Foto" class="card-img-top" alt="Producto recomendado" />

                    }
                    <div class="card-body">
                        <h5 class="card-title">@rec.Producto?.NombreProducto</h5>
                        <p class="card-text"><strong>Recomendado por:</strong> @rec.User?.Nombre @rec.User?.Apellido</p>
                        <p class="card-text"><small class="text-muted">Fecha: @rec.FechaRecomendacion?.ToString("dd/MM/yyyy")</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
