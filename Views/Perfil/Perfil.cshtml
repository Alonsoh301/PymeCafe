@model PymeCafe.Models.Usuario

@{
    var userId = ViewData["UserId"] as int?; // Cambiar la obtención del UserId a un valor nullable
}

<h2 class="text-center mb-4">Perfil de Usuario</h2>

<!-- Contenedor para el perfil -->
<div class="container profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-image">
                <!-- Aquí se puede colocar una imagen de perfil -->
                <img src="https://via.placeholder.com/150" alt="Perfil" class="rounded-circle" />
            </div>
            <div class="profile-info">
                <h3>@Model.Nombre @Model.Apellido</h3>
                <p class="text-muted">@Model.TipoUsuario</p>
            </div>
        </div>

        <div class="profile-details">
            <div class="form-group">
                <label>Primer Nombre:</label>
                <p>@Model.Nombre</p>
            </div>

            <div class="form-group">
                <label>Apellido:</label>
                <p>@Model.Apellido</p>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <p>@Model.CorreoElectronico</p>
            </div>

            <div class="form-group">
                <label>Tipo de Usuario:</label>
                <p>@Model.TipoUsuario</p>
            </div>

            <div class="form-group">
                <label>ID de Usuario:</label>
                <p>@Model.UserId</p> <!-- Non-editable -->
            </div>
        </div>

        <!-- Botón Editar -->
        <div class="text-center">
            <button class="btn btn-custom" onclick="window.location.href='@Url.Action("EditPerfil", "Perfil")'">Editar Perfil</button>
        </div>
    </div>

    <!-- Botones adicionales -->
    <div class="button-container text-center mt-4">
        <button class="btn btn-custom" onclick="location.href='@Url.Action("PuntosLealtad", "Perfil")'">Puntos de Lealtad</button>
        <button class="btn btn-custom" onclick="location.href='@Url.Action("Recomendaciones", "Perfil")'">Recomendaciones</button>
        <button class="btn btn-custom" onclick="location.href='@Url.Action("ValoracionesProducto", "Perfil")'">Valoraciones de Producto</button>
        <button class="btn btn-custom" onclick="location.href='@Url.Action("Pedidos", "Perfil")'">Pedidos</button>
    </div>
</div>

<!-- Estilos CSS -->
<style>
    .profile-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
    }

    .profile-card {
        background: linear-gradient(135deg, #4CAF50, #00b207); /* Gradiente verde */
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        color: white;
    }

    .profile-header {
        display: flex;
        align-items: center;
        justify-content: space-between; /* Esto asegura que el contenido no se sobreponga */
        margin-bottom: 20px;
    }

    .profile-image {
        margin-right: 20px;
    }

        .profile-image img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }

    .profile-info {
        flex-grow: 1; /* Esto asegura que la información ocupe el espacio disponible sin desalinearse */
    }

        .profile-info h3 {
            font-size: 1.8rem;
            margin: 0;
        }

        .profile-info p {
            font-size: 1.2rem;
        }

    .profile-details .form-group {
        margin-bottom: 15px;
    }

    .profile-details label {
        font-weight: bold;
    }

    .btn-custom {
        display: inline-block;
        padding: 12px 25px;
        margin: 10px 5px;
        font-size: 16px;
        font-weight: bold;
        color: #ffffff;
        background: linear-gradient(135deg, #4CAF50, #00b207); /* Degradado verde */
        border: none;
        border-radius: 25px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); /* Sombra */
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background: linear-gradient(135deg, #00b207, #4CAF50); /* Cambiar degradado al pasar */
            box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.3); /* Más sombra */
            transform: translateY(-2px); /* Elevar botón */
        }

    .button-container {
        text-align: center;
        margin-top: 30px;
    }

        .button-container button {
            margin-top: 15px;
        }

    /* Espaciado y estilo de los botones */
    h2 {
        text-align: center;
        color: #333333;
    }

</style>
