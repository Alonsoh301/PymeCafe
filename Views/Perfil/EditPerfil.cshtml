@model Usuario

@{
    ViewData["Title"] = "Editar Perfil";
}

<h2>Editar Perfil</h2>

<form asp-action="UpdatePerfil" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required>
    </div>

    <div class="form-group">
        <label for="Apellido">Apellido</label>
        <input type="text" class="form-control" id="Apellido" name="Apellido" value="@Model.Apellido" required>
    </div>

    <div class="form-group">
        <label for="CorreoElectronico">Correo Electrónico</label>
        <input type="email" class="form-control" id="CorreoElectronico" name="CorreoElectronico" value="@Model.CorreoElectronico" required>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("CambiarContrasena")" class="btn btn-secondary">Cambiar Contraseña</a>
</form>

<a href="@Url.Action("Perfil")" class="btn btn-link">Volver</a>