@model IEnumerable<PymeCafe.Models.Recomendacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Recomendaciones</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaRecomendacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaRecomendacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.ProductoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecomendacionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecomendacionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecomendacionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
