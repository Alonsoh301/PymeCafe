<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PymeCafe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PymeCafe.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" />
    <style>
        /* Aseguramos que el body ocupe el 100% de la altura de la pantalla */
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        /* El contenedor principal toma todo el espacio disponible */
        .content-container {
            flex: 1;
            padding: 20px;
        }

        /* Estilos del footer */
        footer {
            background-color: #1a1a1a;
            color: #f7f7f7;
            padding: 40px 0;
            position: relative;
            width: 100%;
            margin-top: auto; /* Asegura que el footer esté al final */
        }

            footer h2 {
                color: #00b207;
            }

            footer .btn-customFooter {
                background-color: #00b207;
                color: white;
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                footer .btn-customFooter:hover {
                    background-color: #007b3d;
                }

            footer a {
                color: #f7f7f7;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

            /* Estilos para la disposición de las columnas dentro del footer */
            footer .container {
                display: flex;
                justify-content: space-between;
            }

                footer .container > div {
                    width: 30%;
                }

                footer .container form {
                    display: flex;
                    flex-direction: column;
                }

                footer .container input {
                    padding: 10px;
                    border-radius: 5px;
                    border: none;
                    margin-bottom: 10px;
                }

                footer .container img {
                    width: 30px;
                    height: auto;
                    filter: invert(1);
                }
    </style>
</head>
<body>
    <!-- Barra superior -->
    <header class="bg-light py-2">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="text-muted">
                <i class="fas fa-map-marker-alt"></i> Localización, Tibás, San Juan, Costa Rica
            </div>
            <div>
                <a href="#" class="text-muted me-3">Esp <i class="fas fa-globe"></i></a>
                <a class="text-muted" asp-controller="Home" asp-action="Logout">Registrarse / Iniciar sesión</a>
                <a class="text-muted" asp-controller="Perfil" asp-action="Perfil">Mi Perfil</a>
            </div>
        </div>
    </header>

    <!-- Barra de navegación principal -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand text-success fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-seedling"></i> PymeCafe
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Tienda" asp-action="Index">Tienda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Logout">Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenedor de contenido -->
    <div class="content-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Pie de página -->
    <footer>
        <div class="container">
            <div>
                <h2>Fadiva y Sagaz</h2>
                <p>Suscríbete a nuestro boletín.</p>
                <form>
                    <input type="email" placeholder="Tu correo electrónico">
                    <button class="btn-customFooter">Suscribirme</button>
                </form>
            </div>

            <div>
                <h3>Mi cuenta</h3>
                <ul style="list-style: none; padding: 0;">
                    <li>
                        <a asp-controller="Perfil" asp-action="Perfil">Mi cuenta</a>
                    </li>
                    <li><a asp-controller="Perfil" asp-action="Pedidos">Pedidos</a></li>
                    <li><a asp-controller="Tienda" asp-action="Carrito">Carrito</a></li>
                </ul>
            </div>

            <div>
                <h3>Pagos Seguros</h3>
                <img src="~/Images/payments.png" alt="Pagos" />
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
