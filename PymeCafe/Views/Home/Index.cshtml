@model IEnumerable<PymeCafe.Models.Publicacion>

@{
    ViewData["Title"] = "Muro de Publicaciones";
}

<h1>Muro de Publicaciones</h1>

<p>
    <a asp-action="Create">Crear nueva publicación</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPublicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenRuta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPublicacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Imagen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagenRuta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.UserId)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PublicacionID">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.PublicacionID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
