@{
    ViewData["Title"] = "Inicio";
}


@{
    ViewData["Title"] = "Índice de Vistas";
}

<h2 class="text-center my-4">Menú Principal</h2>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Categoria -->
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Categoría</h5>
                    <p class="card-text">Gestiona las categorías de productos.</p>
                    <a href="@Url.Action("Index", "Categoria")" class="btn btn-custom">Ver Categorías</a>
                </div>
            </div>
        </div>

        <!-- Detalles Pedido -->
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Detalles de Pedido</h5>
                    <p class="card-text">Mira los detalles de todos los pedidos.</p>
                    <a href="@Url.Action("Index", "DetallesPedido")" class="btn btn-custom">Ver Detalles de Pedido</a>
                </div>
            </div>
        </div>

        <!-- Notificación -->
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Notificaciones</h5>
                    <p class="card-text">Gestiona tus notificaciones importantes.</p>
                    <a href="@Url.Action("Index", "Notificacion")" class="btn btn-custom">Ver Notificaciones</a>
                </div>
            </div>
        </div>

        <!-- Pedidos -->
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Pedidos</h5>
                    <p class="card-text">Administra todos los pedidos realizados.</p>
                    <a href="@Url.Action("Index", "Pedido")" class="btn btn-custom">Ver Pedidos</a>
                </div>
            </div>
        </div>

        <!-- Producto -->
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Productos</h5>
                    <p class="card-text">Explora los productos disponibles en la tienda.</p>
                    <a href="@Url.Action("Index", "Producto")" class="btn btn-custom">Ver Productos</a>
                </div>
            </div>
        </div>

        <!-- Tienda -->
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Tienda</h5>
                    <p class="card-text">Explora los productos disponibles y compra en la tienda en línea.</p>
                    <a href="@Url.Action("Index", "Tienda")" class="btn btn-custom">Ir a la Tienda</a>
                </div>
            </div>
        </div>

        <!-- Puntos de Lealtad -->
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Puntos de Lealtad</h5>
                    <p class="card-text">Administra los puntos de lealtad de tus clientes.</p>
                    <a href="@Url.Action("Index", "PuntosdeLealtad")" class="btn btn-custom">Ver Puntos de Lealtad</a>
                </div>
            </div>
        </div>

        <!-- Recomendación -->
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Recomendaciones</h5>
                    <p class="card-text">Gestiona las recomendaciones para clientes.</p>
                    <a href="@Url.Action("Index", "Recomendacion")" class="btn btn-custom">Ver Recomendaciones</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Usuarios</h5>
                    <p class="card-text">Gestiona los datos de clientes.</p>
                    <a href="@Url.Action("Index", "Usuario")" class="btn btn-custom">Ver Recomendaciones</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Valoraciones de productos</h5>
                    <p class="card-text">Gestiona las valoraciones de los clientes.</p>
                    <a href="@Url.Action("Index", "Valoracionesdeproducto")" class="btn btn-custom">Ver Recomendaciones</a>
                </div>
            </div>
        </div>
    </div>
</div>
