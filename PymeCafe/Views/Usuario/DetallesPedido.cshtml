@model IEnumerable<PymeCafe.Models.Detallespedido>

<h2>Detalles del Pedido</h2>

@if (!Model.Any())
{
    <p>No hay detalles disponibles para este pedido.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model)
            {
                <tr>
                    <td>@detalle.Producto?.NombreProducto</td>
                    <td>@detalle.Cantidad</td>
                    <td>@detalle.PrecioUnitario?.ToString("C")</td>
                    <td>@((detalle.Cantidad ?? 0) * (detalle.PrecioUnitario ?? 0)).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

