@model PymeCafe.Models.Usuario
@{
    var userId = (int)ViewData["UserId"];
}
<h2>Perfil de Usuario</h2>
<div class="container">
    <h2>Configuración de cuenta</h2>

    <div class="form-group">
        <label>Primer Nombre:</label>
        <p>@Model.Nombre</p>
    </div>

    <div class="form-group">
        <label>Apellido:</label>
        <p>@Model.Apellido</p>
    </div>

    <div class="form-group">
        <label>Email:</label>
        <p>@Model.CorreoElectronico</p>
    </div>

    <div class="form-group">
        <label>Tipo de Usuario:</label>
        <p>@Model.TipoUsuario</p>
    </div>

    <div class="form-group">
        <label>ID de Usuario:</label>
        <p>@Model.UserId</p> <!-- Non-editable -->
    </div>

    <button class="btn btn-custom" onclick="window.location.href='@Url.Action("EditProfile", "Usuario")'">
        Editar
    </button>
</div>
<div>
    
    <button onclick="location.href='@Url.Action("PuntosLealtad", "Usuario")'">Puntos de Lealtad</button>
    <button onclick="location.href='@Url.Action("Recomendaciones", "Usuario")'">Recomendaciones</button>
    <button onclick="location.href='@Url.Action("ValoracionesProducto", "Usuario")'">Valoraciones de Producto</button>
    <button onclick="location.href='@Url.Action("Pedidos", "Usuario")'">Pedidos</button>
</div>

