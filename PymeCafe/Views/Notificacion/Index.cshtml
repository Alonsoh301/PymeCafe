@model IEnumerable<PymeCafe.Models.Notificacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Notificaciones</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mensaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mensaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NotificacionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NotificacionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NotificacionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
